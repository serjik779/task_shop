{%extends "LoginLoginBundle:Default:index.html.twig"%}
{%block container %}
    <div class="container" >
        <form id="form" class="well" method="post" action="{{ path('login_login_default_signup') }}" data-validate="parsley">
            <h2>Sign Up</h2>
            <label>Email</label>
            <input type="text"  id="email"  class="input-xlarge" name="email" data-trigger="change" data-required="true" data-type="email">

            <label>Repeat Email</label>
            <input type="text"  id="emailRe" class="input-xlarge" name="emailRe" data-trigger="change" data-required="true" data-type="email" data-equalto="#email">


            <label>Password</label>
            <input type="password"   class="input-xlarge" name="password" data-trigger="change" data-required="true">

            <label>Name</label>
            <input type="text"   class="input-xlarge" name="name" data-trigger="change" data-required="true" >

            <label>Address</label>
            <input type="text"   class="input-xlarge" name="address" data-trigger="change" data-required="true" >

            <label>Phone</label>
            <input type="text"   class="input-xlarge" name="phone" data-trigger="change" data-required="true" >


            <div>
                <button class="btn btn-primary" type="submit" >Create Account</button>
            </div>

        </form>
    </div>
{%endblock%}