{% extends 'ShopBundle:Default:index.html.twig' %}
{% block body %}
    <div class="slider-area">
        <!-- Slider -->
        <div class="block-slider block-slider4">
            <ul class="" id="bxslider-home4">
                {% if vm.product %}
                    {% for product in vm.product %}
                        <li>
                            {% if product.images|length != 0 %}
                                <img src="{{ product.images[0].path }}" alt="">
                            {% else %}
                                <img src="/img/no-image.png" alt="">
                            {% endif %}
                            <div class="caption-group">
                                <h2 class="caption title">
                                    {{ product.title }}
                                </h2>
                                <a href="{{ path('products_show', { 'slug2': product.category.slug, 'slug': product.slug }) }}">Go</a>
                            </div>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>
    <!-- End slider area -->

    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo1">
                        <i class="fa fa-refresh"></i>
                        <p>30 Days return</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo2">
                        <i class="fa fa-truck"></i>
                        <p>Free shipping</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo3">
                        <i class="fa fa-lock"></i>
                        <p>Secure payments</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo4">
                        <i class="fa fa-gift"></i>
                        <p>New products</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End promo area -->

    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Latest Products</h2>
                        <div class="product-carousel">
                            {% if vm.latest %}
                                {% for latest in vm.latest %}
                                    <div class="single-product">
                                        <div class="product-f-image">
                                            {% if latest.images|length != 0 %}
                                                <img src="{{ latest.images[0].path }}" alt="">
                                            {% else %}
                                                <img src="/img/no-image.png" alt="">
                                            {% endif %}
                                            <div class="product-hover">
                                                <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                <a href="{{ path('products_show', { 'slug2': latest.category.slug, 'slug': latest.slug }) }}"
                                                   class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                            </div>
                                        </div>

                                        <h2>
                                            <a href="{{ path('products_show',
                                            { 'slug2': latest.category.slug, 'slug': latest.slug }) }}"
                                            >{{ latest.title }}
                                            </a>
                                        </h2>
                                        <div class="product-carousel-price">
                                            <ins>${{ latest.cost }}</ins>
                                            <del>${{ latest.cost * 1.25 }}</del>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->

    <div class="brands-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="brand-wrapper">
                        <div class="brand-list">
                            <img src="/img/brand1.png" alt="">
                            <img src="/img/brand2.png" alt="">
                            <img src="/img/brand3.png" alt="">
                            <img src="/img/brand4.png" alt="">
                            <img src="/img/brand5.png" alt="">
                            <img src="/img/brand6.png" alt="">
                            <img src="/img/brand1.png" alt="">
                            <img src="/img/brand2.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End brands area -->

    <div class="product-widget-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-product-widget">
