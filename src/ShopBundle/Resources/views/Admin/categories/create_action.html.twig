{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block sonata_admin_content %}
    <form role="form" enctype="multipart/form-data" method="POST" name="create_categories">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Категории
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    <div class="form-group" id="sonata-ba-field-container-title">
                                        <label class="control-label required" for="title">
                                            Наименование категории
                                        </label>
                                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                            <input type="text" id="title" name="title" required="required" value="{{ app.request.get('title') }}" class=" form-control">
                                        </div>
                                    </div>
                                    <div class="form-group" id="sonata-ba-field-container-image">
                                        <label class="control-label required" for="image">
                                            Картинка
                                        </label>
                                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                            <input type="file" id="image" name="image" value="{{ app.request.get('image') }}" required="required" class="">
                                        </div>
                                    </div>
                                    {% for flashMessage in app.session.flashbag.get('error') %}
                                        {{ flashMessage }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="sonata-ba-form-actions well well-small form-actions">
            <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save" aria-hidden="true"></i> Create</button>
        </div>
    </form>
{% endblock %}